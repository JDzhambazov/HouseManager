@model FeeServiseModel

@{
    this.ViewData["Title"] = "Месечни такси";
}

<div class="container-scroller">
    <div class="container-scroller mt-3">
        <div class="card col-lg-6 mx-auto form-style">
            <div class="card-body px-5 py-5">
                <h3 class="card-title text-left mb-3">Добавяне на задължения за адреса</h3>
                <div asp-validation-summary="All" class="text-danger"></div>
                <form method="post">
                    <hr />
                    <div class="form-group">
                        <label asp-for="FeeType"></label>
                        <select asp-for="FeeType" asp-items="@Model.FeeTypes" class="form-control simpleSelect2"></select>
                        <span asp-validation-for="FeeType" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Cost"></label>
                        <input asp-for="Cost" class="form-control p_input">
                        <span asp-validation-for="Cost" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="checkbox" asp-for="IsRegular" class="mr-3">
                        <label asp-for="IsRegular"></label>
                    </div>
                    <div class="form-group">
                        <input type="checkbox" asp-for="IsPersonal" class="mr-2">
                        <label asp-for="IsPersonal"></label>
                    </div>
                    <div class="text-center d-flex justify-content-around">
                        <input type="submit" class="btn btn-primary" value="Добави" />
                        <a class="btn btn-danger" asp-area="" asp-controller="Home" asp-action="Index">Отказ</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
