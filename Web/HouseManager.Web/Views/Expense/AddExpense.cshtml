@using HouseManager.Data.Models;
@using HouseManager.Web.ViewModels.Expens;

@model ExpenseViewModel

@{
    ViewData["Title"] = "Expense";
}

<div class="row h-100  d-flex justify-content-center align-items-center">
    <div class="col-md-4">
        <form asp-controller="Expense" asp-action="AddExpense" method="post">
            <h4 class="text-center">Плащане на разход</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="number" asp-for="AddressId" value=@Model.AddressId hidden />
            <div class="form-group">
                <label asp-for="ExpensType" class="h5">Описание на разхода</label>
                <select asp-for="ExpensType" asp-items="@Model.ExpensTypeList" class="form-control simpleSelect2"></select>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Price" class="h5"> Стойност</label>
                <input type="text" step="any" asp-for="@Model.Price" class="form-control" />
                @*<span asp-validation-for="Input.UserName" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                <label asp-for="@Model.Date" class="h5">Дата на плащане</label>
                <input asp-for="@Model.Date" type="date" class="form-control" />
                @*<span asp-validation-for="Input.FirsName" class="text-danger"></span>*@
            </div>
            <div class="form-group text-center">
                <input type="checkbox" asp-for="IsRegular" checked="checked"/>
                <label asp-for="IsRegular" class="h5">За общи части</label>
                @*<span asp-validation-for="Input.Email" class="text-danger"></span>*@
            </div>
            <hr />
            <div class="text-center d-flex justify-content-around">
                <button type="submit" class="btn btn-primary">Добави Разход</button>
                <a class="btn btn-danger" asp-controller="Home" asp-action="Index">Отказ</a>
            </div>
        </form>
    </div>
</div>

