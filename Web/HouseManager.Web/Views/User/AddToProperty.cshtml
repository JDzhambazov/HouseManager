@model AddUserToPropertyServiceModel

@{
    this.ViewData["Title"] = "Регистрация";
}

<div class="container-scroller">
    <div class="container-scroller mt-3">
        <div class="card col-lg-6 mx-auto form-style">
            <div class="card-body px-5 py-5">
                <h3 class="card-title text-left mb-3">Добавяне на потребител към имот(и)</h3>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <form method="post">
                    <hr />
                    <div class="form-group">
                        <label asp-for="UserName"></label>
                        <input asp-for="UserName" class="form-control p_input">
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="FirstName"></label>
                        <input asp-for="FirstName" class="form-control p_input">
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="LastName"></label>
                        <input asp-for="LastName" class="form-control p_input">
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email"></label>
                        <input asp-for="Email" class="form-control p_input">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password"></label>
                        <input asp-for="Password" class="form-control p_input">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Property"></label>
                        <select asp-for="Property" asp-items="@Model.Properties" class="form-control simpleSelect2" name="property[]" multiple="multiple" required></select>
                        <span asp-validation-for="Property" class="text-danger"></span>
                    </div>
                    <div class="text-center d-flex justify-content-around mt-4">
                        <input type="submit" class="btn btn-primary" value="Добави" />
                        <a class="btn btn-danger" asp-area="" asp-controller="Home" asp-action="Index">Отказ</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}