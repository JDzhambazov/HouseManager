@using HouseManager.Common
@using HouseManager.Data
@using HouseManager.Data.Models
@using HouseManager.Services.Data
@using Microsoft.AspNetCore.Identity

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@inject IUserService userService


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@this.ViewData["Title"] - @GlobalConstants.SystemName</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/select2/css/select2.min.css" asp-append-version="true" />
</head>
<body>
    <header class="dark">
        <nav class="navbar navbar-expand-lg navbar-dark">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">@GlobalConstants.SystemName</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navContent">
                <ul class="navbar-nav mr-auto">

                    @if (this.SignInManager.IsSignedIn(this.User))
                    {
                        <li class="nav-item dropdown">
                            <button class="btn dark text-info dropdown-toggle" type="button" id="btnDropdownDemo" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Финанси
                            </button>
                            <div class="dropdown-menu dark" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item text-info disabled" asp-controller="" asp-action="">Приходи</a>
                                <a class="dropdown-item text-info" asp-area="" asp-controller="Expense" asp-action="AddExpense">Разходи</a>
                                <a class="dropdown-item text-info disabled" asp-controller="" asp-action="">Месечни Такси</a>
                                <div class="dropdown-divider border-info"></div>
                                <a class="dropdown-item text-info" asp-area="" asp-controller="DueAmount" asp-action="MonthAmount" asp-route-id="1">Текущи задължения</a>
                                <div class="dropdown-divider border-info"></div>
                                <a class="dropdown-item text-info disabled" asp-controller="" asp-action="">Годищен Отчет</a>
                                <a class="dropdown-item text-info disabled" asp-controller="" asp-action="">Месечен Отчет</a>
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <button class="btn dark text-info dropdown-toggle" type="button" id="btnDropdownDemo" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Адрес
                            </button>
                            <div class="dropdown-menu dark" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item text-info disabled" asp-controller="" asp-action="">Добавяне Имот</a>
                                <a class="dropdown-item text-info" asp-area="Identity" asp-page="/Account/Register">Добавяне Потребител</a>
                                <a class="dropdown-item text-info disabled" asp-controller="" asp-action="">Данни за Имот</a>
                                <div class="dropdown-divider border-info"></div>
                                <a class="dropdown-item text-info disabled" asp-controller="" asp-action="">Данни за Адрес</a>
                                <div class="dropdown-divider border-info"></div>
                                <a class="dropdown-item text-info disabled" asp-controller="" asp-action="">Годищен Отчет</a>
                                <a class="dropdown-item text-info disabled" asp-controller="" asp-action="">Месечен Отчет</a>
                            </div>
                        </li>
                    }

                    @*<li class="nav-item">
                        <a class="nav-link disabled" asp-controller="" asp-action="">Go Tutorials</a>
                    </li>*@
                </ul>
                <partial name="_LoginPartial" />
                @*<form class="form-inline my-2 my-lg-0">

                        <input class="form-control mr-sm-2" type="search" placeholder="Search Tutorials" aria-label="Search">

                        <button class="btn btn-primary my-2 my-sm-0" type="submit">Go</button>

                    </form>*@

            </div>

        </nav>
    </header>

    <div class="container">
        <partial name="_CookieConsentPartial" />
        <main role="main" class="pb-3">
            @this.RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTime.Now.Year - @GlobalConstants.SystemName - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js" asp-append-version="true"></script>
    <script src="~/js/site.min.js" asp-append-version="true"></script>
    <script src="~/lib/select2/js/select2.full.min.js"></script>
    @await this.RenderSectionAsync("Scripts", required: false)
</body>
</html>
