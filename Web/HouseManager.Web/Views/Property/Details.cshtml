@model PropertyDetailsServiceModel

@{
    this.ViewData["Title"] = "Информация за имот";
}
<h2 class="text-center mt-4 mb-4">@ViewData["Title"]</h2>

<div class="col-lg-12 grid-margin stretch-card">
    <div class="table-responsive">
        <div class="table-responsive mdi-margin col-md-6 offset-3">
            <table class="table table-striped table-bordered table-hover">
                <thead class="text-center text-primary border-top form-style">
                    <tr>
                        <th>Име на поле</th>
                        <th>Стойност</th>
                        <th>

                        </th>
                    </tr>
                </thead>
                <tbody class="form-style">
                    <tr>
                        <td>Идентификатор на имота</td>
                        <td>@Model.Id</td>
                        <td></td>
                    </tr>
                    <tr>
                        <td>Означение на имот</td>
                        <td>@Model.Name</td>
                        <td></td>
                    </tr>
                    <tr>
                        <td>Тип на имота</td>
                        <td>@Model.PropertyTypeName</td>
                        <td></td>
                    </tr>
                    <tr>
                        <td>Брой обитатели</td>
                        <td>@Model.ResidentsCount</td>
                        <td></td>
                    </tr>
                    @foreach (var user in Model.Residents)
                    {
                        <tr>
                            <td class="border-warning border-top">@user.FullName</td>
                            <td class="border-warning">@user.Email</td>
                            <td class="border-warning"></td>
                        </tr>
                    }
                    @if (ViewBag.IsUserMakeChanges)
                    {

                        <tr>
                            <td>Добави обитател</td>
                            <td class="text-center">
                                <a asp-area="" asp-controller="User" asp-action="AddToProperty" asp-route-id="@Model.Id" class="btn btn-outline-primary">Добавяне</a>
                            </td>
                            <td></td>
                        </tr>
                    }
                    @foreach (var fee in Model.MonthFees)
                    {
                        <tr>
                            <td>Месечна такса за:</td>
                            <td>@fee</td>
                            <td></td>
                        </tr>
                    }
                </tbody>
            </table>
            @if (ViewBag.IsUserMakeChanges)
            {
                <a class="btn btn-primary col-md-12 text-center" asp-area="" asp-controller="Property" asp-action="EditProperty" asp-route-id="@Model.Id">Корегирай</a>
            }
            <a class="btn btn-primary col-md-12 text-center mt-3" asp-area="" asp-controller="Property" asp-action="GetAllProperies" asp-route-id="@Model.Id">Назад</a>
        </div>
    </div>
</div>
