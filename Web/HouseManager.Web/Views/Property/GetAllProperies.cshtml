@model List<AllPropertyViewModel>

@{
    this.ViewData["Title"] = "Описание на имотите";
}
<h2 class="text-center mt-4 mb-4">Данни за имотите</h2>

<div class="col-lg-12 grid-margin stretch-card">
    <div class="table-responsive">
        <div class="table-responsive mdi-margin">
            <table class="table table-striped table-bordered table-hover">
                <thead class="text-center text-primary border-top form-style">
                    <tr>
                        <th>Идентификатор</th>
                        <th>Тип на имота</th>
                        <th>Брой Обитатели</th>
                        <th>Собственик</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody class="form-style">
                    @foreach (var property in Model)
                    {
                        <tr>
                            <td>@property.Name</td>
                            <td>@property.PropertyType</td>
                            <td>@property.ResidentsCount</td>
                            @if (property.Owner == "N/A")
                            {
                                if (ViewBag.IsMakeChanges)
                                {
                                    <td><a asp-area="" asp-controller="" asp-action="" asp-route-id="@property.Id" class="btn btn-outline-primary">Добави собственик</a></td>
                                }
                                else
                                {
                                    <td>"Не е въведен"</td>
                                }
                            }
                            else
                            {
                                <td>@property.Owner</td>
                            }
                            <td><a asp-controller="Property" asp-action="Details" asp-route-id="@property.Id" class="btn btn-outline-warning">Подробна информация</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    @*@if (Model.Pages != null && Model.Pages.MaxPages > 1)
        {
            <partial name="_PagePartial" model="@Model.Pages" />
        }*@
</div>