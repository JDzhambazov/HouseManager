@using HouseManager.Web.ViewModels.DueAmount

@inject IUserService userService

@model MonthAmountViewModel
@{
    ViewData["Title"] = "Текущи задължения";
}

@{
    var isUserMakeChanges = userService.IsUserMakeChanges(this.User.Id());
}
<div class="text-center">
    <h3 class="mt-3 mb-3 text-white">Задължения за месец: @DateTime.Now.ToString("MMM yyyy").ToUpper()</h3>
</div>
<div class="col-lg-12 grid-margin stretch-card">
    <div class="table-responsive">
        <div class="table-responsive mdi-margin">
            <table class="table table-striped table-bordered table-hover">
                <thead class="text-center text-primary border-top form-style">
                    <tr>
                        <th>Имот</th>
                        <th>Собственик</th>
                        <th>Бр.Обитатели</th>
                        <th>Задължения Общи части</th>
                        <th>Задължения Ремонт</th>
                        @if (isUserMakeChanges)
                        {
                            <th>Плащане</th>
                        }
                    </tr>
                </thead>
                <tbody class="form-style">
                    @foreach (var item in Model.MonthAmounts)
                    {
                        <tr class="text-center">
                            <td class="text-white h5">@item.PropertyName</td>
                            <td class="text-white h5">@item.ResidentName</td>
                            <td class="text-white h5">@item.ResidentsCount</td>
                            <td class="text-white h5">@item.RegularDueAmount лв.</td>
                            <td class="text-white h5">@item.NotRegularDueAmount лв.</td>
                            @if (isUserMakeChanges)
                            {
                                <td class="text-primary h5">
                                    <a asp-controller="Income" asp-action="AddIncome" asp-route-id="@item.Id" class="btn btn-outline-primary">Плащане</a>
                                </td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    @*@if (Model.Pages != null && Model.Pages.MaxPages > 1)
        {
            <partial name="_PagePartial" model="@Model.Pages" />
        }*@
</div>
