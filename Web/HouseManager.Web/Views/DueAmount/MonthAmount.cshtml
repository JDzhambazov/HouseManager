@inject IUserService userService

@model PagingServiceModel<AmountListServiceModel>
@{
    ViewData["Title"] = "Текущи задължения";
}

<div class="text-center">
    <h3 class="mt-3 mb-3 text-white">Задължения за месец: @DateTime.Now.ToString("MMMM yyyy").ToUpper() г.</h3>
</div>

<div class="col-lg-12 grid-margin stretch-card">
    <div class="table-responsive">
        <div class="table-responsive mdi-margin">
            <table class="table table-striped table-bordered table-hover">
                <thead class="text-center text-primary border-top form-style">
                    <tr>
                        <th>Имот</th>
                        <th>Собственик</th>
                        <th>Бр.Обитатели</th>
                        <th>Задължения Общи части</th>
                        <th>Задължения Ремонт</th>
                        @if (ViewBag.isUserMakeChanges)
                        {
                            <th>Плащане</th>
                        }
                    </tr>
                </thead>
                <tbody class="form-style">
                    @foreach (var item in Model.ItemList)
                    {
                        <tr class="text-center">
                            <td class="text-white h5">@item.PropertyName</td>
                            <td class="text-white h5">@item.ResidentName</td>
                            <td class="text-white h5">@item.ResidentsCount</td>
                            <td class="text-white h5">@item.RegularDueAmount лв.</td>
                            <td class="text-white h5">@item.NotRegularDueAmount лв.</td>
                            @if (ViewBag.isUserMakeChanges)
                            {
                                <td class="text-primary h5">
                                    <a asp-controller="Income" asp-action="AddIncome" asp-route-id="@item.Id" class="btn btn-outline-primary">Плащане</a>
                                </td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    @if (Model.MaxPages > 1)
    {
        var paging = new PagingModel()
        {
            CurrentPage = Model.CurrentPage,
            MaxPages = Model.MaxPages,
        };

        <partial name="_PagePartial" model="paging" />
    }
</div>
