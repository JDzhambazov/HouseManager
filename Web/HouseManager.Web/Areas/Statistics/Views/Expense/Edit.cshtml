@model EditExpenseViewModel

@{
    this.ViewData["Title"] = "Корекция на разход";
}

<div class="container-scroller">
    <div class="container-scroller mt-3">
        <div class="card col-lg-6 mx-auto form-style">
            <div class="card-body px-5 py-5">
                <h3 class="card-title text-left mb-3">@this.ViewData["Title"]</h3>
                <form method="post" col-lg-8 offset-2>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input asp-for="Id" value="@Model.Id" type="hidden" />
                    <div class="form-group">
                        <label asp-for="ExpenseType"></label>
                        <select asp-for="ExpenseType" asp-items="@Model.ExpenseTypes" class="form-control"></select>
                        <span asp-validation-for="ExpenseType" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Cost"></label>
                        <input asp-for="Cost" class="form-control p_input">
                        <span asp-validation-for="Cost" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Date"></label>
                        <input asp-for="Date" type="date" class="form-control p_input">
                        <span asp-validation-for="Date" class="text-danger"></span>
                    </div>

                    <div class="text-center mt-4">
                        <input type="submit" class="btn btn-primary btn-block enter-btn" value="Промени" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}