@page
@model RegisterAddressModel
@{
    ViewData["Title"] = "Регистрация";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-12">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Създаване на нов адрес</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="row">
                <div class="col-md-6">
                    <h4 class="text-center">Данни за Домоуправител</h4>
                    <div class="form-group">
                        <label asp-for="Input.UserName"></label>
                        <input asp-for="Input.UserName" class="form-control" />
                        <span asp-validation-for="Input.UserName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.FirsName"></label>
                        <input asp-for="Input.FirsName" class="form-control" />
                        <span asp-validation-for="Input.FirsName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.LastName"></label>
                        <input asp-for="Input.LastName" class="form-control" />
                        <span asp-validation-for="Input.LastName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password"></label>
                        <input asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.ConfirmPassword"></label>
                        <input asp-for="Input.ConfirmPassword" class="form-control" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <h4 class="text-center">Данни за Адреса</h4>
                    <div class="form-group">
                        <label asp-for="Input.City"></label>
                        <input asp-for="Input.City" class="form-control" />
                        <span asp-validation-for="Input.City" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.District"></label>
                        <input asp-for="Input.District" class="form-control" />
                        <span asp-validation-for="Input.District" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Street"></label>
                        <input asp-for="Input.Street" class="form-control" />
                        <span asp-validation-for="Input.Street" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Number"></label>
                        <input asp-for="Input.Number" class="form-control" />
                        <span asp-validation-for="Input.Number" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Entrance"></label>
                        <input asp-for="Input.Entrance" class="form-control" />
                        <span asp-validation-for="Input.Entrance" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.NumberOfProperties"></label>
                        <input asp-for="Input.NumberOfProperties" class="form-control" />
                        <span asp-validation-for="Input.NumberOfProperties" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
