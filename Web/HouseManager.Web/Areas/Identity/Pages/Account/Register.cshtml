@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="container-scroller">
    <div class="container-scroller mt-3">
        <div class="card col-lg-6 mx-auto form-style">
            <div class="card-body px-5 py-5">
                <h3 class="card-title text-left mb-3">Регистрация</h3>
                <div asp-validation-summary="All" class="text-danger"></div>
                <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <hr />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.UserName"></label>
                        <input asp-for="Input.UserName" class="form-control" />
                        <span asp-validation-for="Input.UserName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.FirsName"></label>
                        <input asp-for="Input.FirsName" class="form-control" />
                        <span asp-validation-for="Input.FirsName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.LastName"></label>
                        <input asp-for="Input.LastName" class="form-control" />
                        <span asp-validation-for="Input.LastName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password"></label>
                        <input asp-for="Input.Password" class="form-control p_input">
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.ConfirmPassword"></label>
                        <input asp-for="Input.ConfirmPassword" class="form-control p_input">
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group d-flex align-items-center justify-content-between">
                        <div class="form-check">
                            <input asp-for="Input.RememberMy" type="checkbox" class="form-check-input">
                            <label asp-for="Input.RememberMy" class="form-check-label"></label>
                        </div>
                    </div>
                    <div class="text-center mt-4">
                        <input type="submit" class="btn btn-primary btn-block enter-btn" value="Регистрирай" />
                    </div>
                    <p class="sign-up text-center">
                        Вече имате профил?
                        <a asp-area="Identity" asp-page="/Account/Login"> Вход</a>
                    </p>
                    <p class="terms">
                        Със създаването на профил в сайта се съгласявате с нашите
                        <a href="#"> Terms & Conditions</a>
                    </p>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
